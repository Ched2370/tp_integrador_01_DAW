doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Proyecto Universidad | #{pagina}
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
        link(rel="stylesheet", href="/css/app.css")
        link(rel="icon" href="../logo.svg")
    body.min-h-screen.bg-gray-50 
        nav.bg-white.shadow
            .container.mx-auto.px-4
                .flex.justify-between.items-center.h-16
                    a.text-xl.font-bold.text-gray-800(href="/") Proyecto Universidad
                    ul.flex.space-x-4
                        li
                            a(href="/estudiantes/listarEstudiantes" class="text-gray-600 hover:text-indigo-600 font-bold") Estudiantes
                        li
                            a(href="/profesores/listarProfesores" class="text-gray-600 hover:text-indigo-600 font-bold") Profesores
                        li
                            a(href="/cursos/listarCursos" class="text-gray-600 hover:text-indigo-600 font-bold") Cursos
                        li
                            a(href="/inscripciones/listarInscripciones" class="text-gray-600 hover:text-indigo-600 font-bold") Inscripciones
        main(class="mx-auto container mt-10 px-2")
            block contenido
            if (ruta === '/')
                block carousel
                    .conatainer.d-flex.flex.p-5.vh90
                        #carouselExampleSlidesOnly.carousel.slide(data-bs-ride='carousel')
                            .carousel-inner.d-flex.justify-content-center.align-items-center
                                .carousel-item.active
                                    a(href="/estudiantes/listarEstudiantes")
                                        h3.text-left.h3 Estudiates
                                        img(src='https://cdn.pixabay.com/photo/2017/07/31/11/21/people-2557396_1280.jpg', class='d-block w-50', alt='estudiante')
                                .carousel-item
                                    a(href="/profesores/listarProfesores")
                                        h3.text-left.h3 Profesores
                                        img(src='https://cdn.pixabay.com/photo/2018/10/22/18/02/teacher-3765909_1280.jpg', class='d-block w-50', alt='profesor')
                                .carousel-item
                                    a(href="/cursos/listarCursos")
                                        h3.text-left.h3 Cursos
                                        img(src='https://cdn.pixabay.com/photo/2021/04/24/15/37/online-6204349_1280.jpg', class='d-block w-50', alt='curso')

            block scripts
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
