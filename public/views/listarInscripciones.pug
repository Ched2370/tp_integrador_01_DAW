extends ./index

block contenido
    .flex.justify-end.mb-4
        ul.flex.space-x-4
            li
                a(href="/inscripciones/creaInscripciones" class="text-green-600 hover:text-green-800") Inscribir
    
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina
      
        table.table-auto.w-full.mt-4
            thead
                tr
                    th.text-left.text-gray-500.uppercase.px-6.py-3 Curso
                    th.text-left.text-gray-500.uppercase.px-6.py-3 Estudiante
                    th.text-left.text-gray-500.uppercase.px-6.py-3 Nota

            tbody
                each inscripcion in inscripciones
                    tr
                        td.px-6.py-4= inscripcion.curso ? inscripcion.curso.id : 'Sin registrar'
                        td.px-6.py-4= inscripcion.estudiante ? inscripcion.estudiante.id : 'Sin registrar'
                        td.px-6.py-4= inscripcion.nota ? inscripcion.nota : 'Sin registrar'
                        td.px-6.py-4
                            a.text-blue-500(href=`/inscripciones/modificaInscripcion/${inscripcion.estudiante ? inscripcion.estudiante.id : ''}/${inscripcion.curso ? inscripcion.curso.id : ''}`) Editar
                            a.text-red-500.ml-2(href="#", onclick=`eliminarInscripcion(${inscripcion.estudiante ? inscripcion.estudiante.id : 'null'}, ${inscripcion.curso ? inscripcion.curso.id : 'null'})`) Eliminar

block scripts
    script.
        function eliminarInscripcion(estudiante_id, curso_id) {
            if (confirm('¿Estás seguro de que deseas eliminar esta inscripción?')) {
                fetch(`/inscripciones/${estudiante_id}/${curso_id}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.mensaje === 'Inscripcion eliminada') {
                        alert('Inscripcion eliminado con éxito.');
                        window.location.reload(); 
                    } else {
                        alert(data.mensaje); 
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al eliminar la inscripción.');
                });
            }
        }
