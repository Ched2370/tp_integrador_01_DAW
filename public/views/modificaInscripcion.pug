extends index
block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method='POST' action=`/inscripciones/${estudiante_id}/${curso_id}?_method=PUT` noValidate)
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="curso_id") ID Curso
                        input#curso_id.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="ID Curso" type="text" name="curso_id" value=inscripcion? inscripcion.curso_id : 'null')

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="estudiante_id") ID Estudiante
                        input#estudiante_id.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="ID Estudiante" type="text" name="estudiante_id" value=inscripcion? inscripcion.estudiante_id : 'null')
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nota") nota
                        input#nota.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nota" type="text" name="nota" disabled value=inscripcion? inscripcion.nota : 'null')
                    
                    button.bg-blue-500.text-white.px-4.py-2.rounded-md.mt-4(type='submit') Modificar Estudiante


block scripts
    script.
        function calidar(estudiante_id, curso_id) {
            if (confirm('¿Deseas agregar una nota inscripción?')) {
                fetch(`/inscripciones/${estudiante_id}/${curso_id}`, {
                    method: 'PUT'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.mensaje === 'Inscripcion eliminada') {
                        alert('Inscripcion eliminado con éxito.');
                        window.location.reload(); 
                    } else {
                        alert(data.mensaje); 
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al eliminar la inscripción.');
                });
            }
        }
